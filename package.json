{
  "name": "next-tailwind-boilerplate-js",
  "private": true,
  "version": "1.0.0",
  "description": "Minimal Next.js (App Router) + Tailwind CSS boilerplate in JavaScript with ESLint, Prettier, Husky, and lint-staged.",
  "engines": {
    "node": ">=18.18.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write .",
    "prepare": "husky"
  },
  "dependencies": {
    "clsx": "^2.1.0",
    "framer-motion": "^12.23.12",
    "i18next": "^25.5.2",
    "lucide-react": "^0.544.0",
    "next": "14.2.5",
    "next-i18next": "^15.4.2",
    "next-themes": "^0.3.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-google-recaptcha": "^3.1.0",
    "react-i18next": "^15.7.3"
  },
  "devDependencies": {
    "@svgr/webpack": "^8.1.0",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.5",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-unused-imports": "^3.2.0",
    "husky": "^9.1.5",
    "lint-staged": "^15.2.7",
    "postcss": "^8.4.39",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.10"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  }
}
